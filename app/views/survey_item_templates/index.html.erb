<p id="notice"><%= notice %></p>

<h1>Listing Survey Item Templates</h1>

<table>
  <thead>
    <tr>
      <th>Question title</th>
      <th>Description</th>
      <th>Surveytemplate</th>
      <th>Surveyitemcategory</th>
      <th>Survey item templatable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_item_templates.each do |survey_item_template| %>
      <tr>
        <td><%= survey_item_template.Question_title %></td>
        <td><%= survey_item_template.description %></td>
        <td><%= survey_item_template.SurveyTemplate %></td>
        <td><%= survey_item_template.SurveyItemCategory %></td>
        <td><%= survey_item_template.survey_item_templatable %></td>
        <td><%= link_to 'Show', survey_item_template %></td>
        <td><%= link_to 'Edit', edit_survey_item_template_path(survey_item_template) %></td>
        <td><%= link_to 'Destroy', survey_item_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

