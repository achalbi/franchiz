<p id="notice"><%= notice %></p>

<h1>Listing Survey Item Category Templates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Survey template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_item_category_templates.each do |survey_item_category_template| %>
      <tr>
        <td><%= survey_item_category_template.title %></td>
        <td><%= survey_item_category_template.survey_template %></td>
        <td><%= link_to 'Show', survey_item_category_template %></td>
        <td><%= link_to 'Edit', edit_survey_item_category_template_path(survey_item_category_template) %></td>
        <td><%= link_to 'Destroy', survey_item_category_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

