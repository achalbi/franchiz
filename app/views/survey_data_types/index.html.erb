<p id="notice"><%= notice %></p>

<h4>Survey Data Types</h4>
<%= link_to 'New Survey data type', new_survey_data_type_path, class: "pull-xs-right" %>
<% if @survey_data_types.exists? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_data_types.each do |survey_data_type| %>
      <tr>
        <td><%= survey_data_type.title %></td>
        <td><%= link_to 'Show', survey_data_type %></td>
        <td><%= link_to 'Edit', edit_survey_data_type_path(survey_data_type) %></td>
        <td><%= link_to 'Destroy', survey_data_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
  <h6 class="text-danger">No survey data types present. Please add.</h6>
<% end %>