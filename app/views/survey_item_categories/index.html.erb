<p id="notice"><%= notice %></p>

<h1>Listing Survey Item Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Survey template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_item_categories.each do |survey_item_category| %>
      <tr>
        <td><%= survey_item_category.title %></td>
        <td><%= survey_item_category.survey_template %></td>
        <td><%= link_to 'Show', survey_item_category %></td>
        <td><%= link_to 'Edit', edit_survey_item_category_path(survey_item_category) %></td>
        <td><%= link_to 'Destroy', survey_item_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

