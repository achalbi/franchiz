<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>  found, please fill up highlighted fields:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inline">
      <div class="form-group">
        <%= f.label :salutation, class: "sr-only"%><br>
        <%= f.select :salutation, options_for_select([ "Mr", "Ms" ], "Mr"),{}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :fname, class: "sr-only" %><br>
        <%= f.text_field :fname, class: "form-control", placeholder: "First Name" %>
      </div>
      <div class="form-group">
        <%= f.label :lname, class: "sr-only" %><br>
        <%= f.text_field :lname, class: "form-control", placeholder: "Last Name" %>
      </div>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= f.label :email, class: "sr-only" %><br>
      <%= f.text_field :email, class: "form-control width-100", placeholder: "e-mail" %>
    </div>
    <div class="form-group">
      <%= f.label :mobile, class: "sr-only" %><br>
      <%= f.text_field :mobile, class: "form-control width-100", placeholder: "mobile" %>
    </div>
  </div>
  <br>
      <%= f.fields_for :address do |address_fields| %>
      <!--        
        <% if @user.address.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.address.errors.count, "error") %> prohibited this address from being saved:</h2>
      
            <ul>
            <% @user.address.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        -->
      
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :doorno, class: "sr-only" %><br>
          <%= address_fields.text_field :doorno %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :street, class: "sr-only" %><br>
          <%= address_fields.text_field :street %>
        </div>
        <div class="form-group">
          <%= address_fields.label :city, class: "sr-only" %>
          <%= address_fields.text_field :city, class: "form-control", placeholder: "City" %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :state, class: "sr-only" %><br>
          <%= address_fields.text_field :state %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :country, class: "sr-only" %><br>
          <%= address_fields.text_field :country %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :pincode, class: "sr-only" %><br>
          <%= address_fields.text_field :pincode %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :latitude, class: "sr-only" %><br>
          <%= address_fields.text_field :latitude %>
        </div>
        <div class="form-group hidden-lg-down">
          <%= address_fields.label :longitude, class: "sr-only" %><br>
          <%= address_fields.text_field :longitude %>
        </div>
      <% end %>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
